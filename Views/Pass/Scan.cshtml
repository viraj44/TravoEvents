<script>
    // Sample participant data
    const participants = [
        { id: 'TC2023-VP-001', name: 'Viraj Patel', access: ['main-entrance', 'vip-lounge', 'exhibition-hall'] },
        { id: 'TC2023-KS-002', name: 'Krupal Shah', access: ['main-entrance', 'exhibition-hall'] },
        { id: 'TC2023-TM-003', name: 'Trushant Mehta', access: ['main-entrance'] },
        { id: 'TC2023-PS-004', name: 'Priya Sharma', access: ['main-entrance', 'conference-room-a'] },
        { id: 'TC2023-RK-005', name: 'Rahul Kumar', access: ['main-entrance', 'vip-lounge', 'conference-room-b'] }
    ];

    let accessLog = [];
    let grantedCount = 0;
    let deniedCount = 0;
    let totalScans = 0;

    // Initialize the page
    function initializePage() {
        updateStats();
        updateTime();
        setInterval(updateTime, 1000);

        // Load any existing log from localStorage
        const savedLog = localStorage.getItem('accessLog');
        if (savedLog) {
            accessLog = JSON.parse(savedLog);
            updateAccessLogTable();
            updateStats();
        }
    }

    // Update current time
    function updateTime() {
        const now = new Date();
        document.getElementById('currentTime').value = now.toLocaleTimeString();
    }

    // Update statistics
    function updateStats() {
        document.getElementById('grantedCount').textContent = grantedCount;
        document.getElementById('deniedCount').textContent = deniedCount;
        document.getElementById('totalScans').textContent = totalScans;
    }

    // Simulate QR code scan
    function simulateScan() {
        const accessPoint = document.getElementById('accessPoint').value;
        if (!accessPoint) {
            showAlert('Please select an access point', 'error');
            return;
        }

        // Randomly select a participant
        const randomParticipant = participants[Math.floor(Math.random() * participants.length)];
        processScan(randomParticipant.id, accessPoint);
    }

    // Process QR scan
    function processScan(participantId, accessPoint) {
        totalScans++;

        // Find participant
        const participant = participants.find(p => p.id === participantId);
        const coordinatorName = document.getElementById('coordinatorName').value;
        const timestamp = new Date().toLocaleString();

        if (!participant) {
            // Participant not found
            showAccessResult('denied', `Participant ID: ${participantId}`, 'Invalid QR Code - Participant not registered');
            logAccess(timestamp, `ID: ${participantId}`, accessPoint, 'Declined', coordinatorName);
            deniedCount++;
        } else {
            // Check if participant has access to this point
            const hasAccess = participant.access.includes(accessPoint);

            if (hasAccess) {
                showAccessResult('granted', participant.name, `Access granted to ${getAccessPointName(accessPoint)}`);
                logAccess(timestamp, participant.name, accessPoint, 'Granted', coordinatorName);
                grantedCount++;
            } else {
                showAccessResult('denied', participant.name, `No access to ${getAccessPointName(accessPoint)}`);
                logAccess(timestamp, participant.name, accessPoint, 'Declined', coordinatorName);
                deniedCount++;
            }
        }

        updateStats();
    }

    // Manual access check
    function manualCheckAccess(action) {
        const participantId = document.getElementById('manualId').value;
        const accessPoint = document.getElementById('accessPoint').value;

        if (!participantId) {
            showAlert('Please enter a participant ID', 'error');
            return;
        }

        if (!accessPoint) {
            showAlert('Please select an access point', 'error');
            return;
        }

        totalScans++;
        const participant = participants.find(p => p.id === participantId);
        const coordinatorName = document.getElementById('coordinatorName').value;
        const timestamp = new Date().toLocaleString();

        if (!participant) {
            showAccessResult('denied', `Participant ID: ${participantId}`, 'Invalid Participant ID');
            logAccess(timestamp, `ID: ${participantId}`, accessPoint, 'Declined', coordinatorName);
            deniedCount++;
        } else {
            if (action === 'granted') {
                showAccessResult('granted', participant.name, `Access granted to ${getAccessPointName(accessPoint)}`);
                logAccess(timestamp, participant.name, accessPoint, 'Granted', coordinatorName);
                grantedCount++;
            } else {
                showAccessResult('denied', participant.name, `Access denied to ${getAccessPointName(accessPoint)}`);
                logAccess(timestamp, participant.name, accessPoint, 'Declined', coordinatorName);
                deniedCount++;
            }
        }

        document.getElementById('manualId').value = '';
        updateStats();
    }

    // Show access result
    function showAccessResult(result, name, details) {
        const accessResult = document.getElementById('accessResult');
        const resultIcon = document.getElementById('resultIcon');
        const resultTitle = document.getElementById('resultTitle');
        const resultDetails = document.getElementById('resultDetails');

        accessResult.className = 'access-result';

        if (result === 'granted') {
            accessResult.classList.add('access-granted');
            resultIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
            resultTitle.textContent = 'Access Granted';
        } else {
            accessResult.classList.add('access-denied');
            resultIcon.innerHTML = '<i class="fas fa-times-circle"></i>';
            resultTitle.textContent = 'Access Denied';
        }

        resultDetails.textContent = `${name} - ${details}`;
        accessResult.style.display = 'block';

        // Hide scanner box
        document.getElementById('scannerBox').style.display = 'none';
    }

    // Log access attempt
    function logAccess(timestamp, name, accessPoint, access, coordinator) {
        const logEntry = {
            timestamp,
            name,
            accessPoint: getAccessPointName(accessPoint),
            access,
            coordinator
        };

        accessLog.unshift(logEntry);

        // Keep only last 30 entries
        if (accessLog.length > 30) {
            accessLog = accessLog.slice(0, 30);
        }

        // Save to localStorage
        localStorage.setItem('accessLog', JSON.stringify(accessLog));

        updateAccessLogTable();
    }

    // Update access log table
    function updateAccessLogTable() {
        const tbody = document.getElementById('accessLogBody');
        tbody.innerHTML = '';

        accessLog.forEach(entry => {
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>${entry.timestamp}</td>
                <td>${entry.name}</td>
                <td>${entry.accessPoint}</td>
                <td>
                    <span class="status-badge ${entry.access === 'Granted' ? 'status-granted' : 'status-declined'}">
                        ${entry.access}
                    </span>
                </td>
                <td>${entry.coordinator}</td>
            `;
            tbody.appendChild(tr);
        });
    }

    // Get access point name
    function getAccessPointName(value) {
        const names = {
            'main-entrance': 'Main Entrance',
            'vip-lounge': 'VIP Lounge',
            'exhibition-hall': 'Exhibition Hall',
            'conference-room-a': 'Conference Room A',
            'conference-room-b': 'Conference Room B',
            'networking-area': 'Networking Area'
        };

        return names[value] || value;
    }

    // Clear access log
    function clearLog() {
        if (confirm('Are you sure you want to clear the access log?')) {
            accessLog = [];
            localStorage.removeItem('accessLog');
            updateAccessLogTable();
            showAlert('Access log cleared', 'success');
        }
    }

    // Show alert
    function showAlert(message, type) {
        const alertBox = document.getElementById('alertBox');
        alertBox.textContent = message;
        alertBox.className = `alert ${type} active`;
        setTimeout(() => {
            alertBox.classList.remove('active');
        }, 3000);
    }

    // Set up event listeners
    document.getElementById('nextScanBtn').addEventListener('click', function() {
        document.getElementById('accessResult').style.display = 'none';
        document.getElementById('scannerBox').style.display = 'flex';
    });

    // Initialize the page when loaded
    document.addEventListener('DOMContentLoaded', initializePage);
</script>